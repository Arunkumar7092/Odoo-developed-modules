<?xml version="1.0" encoding="utf-8"?>
<odoo>       
        <record id="menu_skill_form" model="website.menu">
            <field name="name">Employee Contacts</field>
            <field name="url">/employee_skillsetform</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">55</field>
        </record>

        <template id="create_employeecontacts" name="Employee Contact Form">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure"   style="padding: 10px;background-color: LightGray;">
                        <div class="container" >
                        
                            <form role="form" action="/create/employeecontacts" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <!-- <table border="0" cellpadding="5" cellspacing="0">
                                    <tr style="width:100%">
                                        <td style="width:50%">
                                            <label for="employee_name " class="control-label">Name</label>
                                            <input type="employee_name " name="employee_name " t-att-value="employee_name " id="employee_name " size="50" 
                                            class="form-control" placeholder="e.g. your name" required="required"/>
                                        </td> 
                                    </tr>
                                </table> -->
                                <div class="form-group">
                                    <label for="test_name" class="control-label">Name</label>
                                    <select name="name" class="form-control link-style">
                                        <t t-foreach="test" t-as="emp">
                                            <option t-esc="emp.name" t-att-value="emp.name"/>
                                        </t>
                                    </select>
                                </div>
                                
                                <div class="clearfix oe_login_buttons">

                                    <div class="text-center">

                                     <button padding = "15px 42px" type="submit" class="btn btn-primary pull-center">Submit</button>

                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <record id="employee_thanks" model="website.page">
            <field name="name">Thanks</field>
            <field name="type">qweb</field>
            <field name="url">/employee-thank-you</field>
            <field name="website_published">True</field>
            <field name="key">arun_test.employee_thanks</field>
            <field name="arch" type="xml">
                <t name="Thanks" t-name="arun_test.employee_thanks">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="container">
                                <h1>Thanks!</h1>
                                
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-success" role="status"> Form Submitted  successfully . </div>
                                        <h2>Make sure all other Form details has been filled.</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
</odoo>