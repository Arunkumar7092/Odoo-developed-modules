<?xml version="1.0" encoding="utf-8"?>
<odoo>




    <record id="view_employee_contacts_tree" model="ir.ui.view">
          <field name="name">employee conatcts</field>
          <field name="model">employee.contacts</field>
       <field name="arch" type="xml">
           <tree string="Employee contacts details">
               <!-- <field name="image" nolabel="1" widget="image" class="oe_right oe_avatar"/> -->
                <field name="employee_name"/>
                <field name="mobile_num"/>
                <field name="email"/>
               
           </tree>
       </field>
      </record>

    <record id="view_employee_contacts_form" model="ir.ui.view">
        <field name="name">Employee contact details</field>
        <field name="model">employee.contacts</field>
        <field name="arch" type="xml">
            <form string="Employee contacts details">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <group>
                            <td>
                            <field name="image" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                            </td>
                            </group>
                        </h1>
                    </div>

                	<group col="4">

                     <field name="employee_name"/>
                     <field name="mobile_num"/>
                     <field name="email"/>

                	    
                    </group>
                    
                </sheet>
            
            </form>
        </field>
      </record>


    <record id="employee_contacts_kanban" model="ir.ui.view">
        <field name="name">employee.contacts.kanban</field>
        <field name="model">employee.contacts</field>
        <field name="arch" type="xml">
            <kanban>
               <field name="employee_name"/>
                <field name="mobile_num"/>
                <field name="email"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_employee_contacts_kanban">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('employee.contacts', 'image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/static/img/icon1.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="employee_name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Mobile number : <field name="mobile_num"/></li>
                                    <li>email : <field name="email"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>   
</odoo>