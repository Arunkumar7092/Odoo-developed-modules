                                    <tr style="width:100%">
                                        <td style="width:50%">
                                            <label for="test_name" class="control-label">Name*</label>
                                            <input type="text" name="test_name" t-att-value="test_name" id="test_name" size="50" 
                                            class="form-control" placeholder="e.g. your name" />
                                        </td> 
                                        <td style="width:15%">
                                            <label for="test_age" class="control-label">Age*</label>
                                            <input type="number" name="test_age" t-att-value="test_age" id="test_age" maxlength="10" style="width:100%;max-width: 260px" 
                                            class="form-control"  />                                            
                                        </td> 
                                        <br></br>
                                        <td style="width:25%">
                                            <label for="job_position" class="control-label">Applying For Position*</label>
                                            <input type="text" name="job_position" t-att-value="job_position" id="job_position" maxlength="20" style="width:100%;max-width: 260px" 
                                            class="form-control" />                                            
                                        </td> 
                                    </tr>
                                    <tr>
                                        <td >
                                            <label for="email_id" class="control-label">Email*</label>
                                            <input type="email" name="email_id" t-att-value="email_id" id="email_id" maxlength="80" style="width:100%;max-width: 535px"
                                            class="form-control" />
                                        </td>
                                        <td>
                                            <label for="start_date" class="control-label">Birth date</label>
                                            <input type="date" name="start_date" t-att-value="start_date" id="start_date" maxlength="100" style="width:100%;max-width: 535px"
                                            class="form-control" />
                                        </td>
                                        <td style="width:100%">
                                            <label for="company_name" class="control-label">Mobile Number*</label>
                                            <input type="text" name="company_name" t-att-value="company_name" id="company_name" size="100" style="width:100%;max-width: 535px"
                                            class="form-control" required="required"/>
                                        </td>
                                    </tr>
                                    <tr> 

