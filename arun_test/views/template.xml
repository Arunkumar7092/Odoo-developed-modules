                            <div class="container">
                                <div class="col-sm-4">
                                    <h1>SEARCH EMPLOYEE</h1>
                                </div>
                                <div class="col-sm-2"></div>
                                <div class="col-sm-offset-2 col-sm-4" style="margin-top: 22px;">
                                    <form action="/patients" id="frmGetCustomer" method="POST">
                                        <div class="input-group input-group-sm">
                                            <input  autocomplete="off" type="text" class="form-control" required="required" id="search"
                                                   name="search" placeholder="Enter mobile/name/email" align="right"/>
                                            <span class="border border-dark">
                                                <button type="submit" class="btn a-submit btn-default btn-flat"><i
                                                        class="fa fa-search" ></i></button>
                                                   <!-- <button padding = "15px 42px" type="submit" class="btn btn-primary pull-center">Submit</button> -->

                                            </span>
                                        </div>
                                    </form>
                                </div>
                                    
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure"   style="padding: 10px;background-color: LightGray;">
                        <div class="container" >
                        
